 <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-100 to-blue-300 py-16 text-center">
    <h1 class="text-4xl md:text-5xl mb-4 text-welcomeColor">Welcome to <span class="font-nunito font-bold">{{title}}</span></h1>
    <p class="text-lg md:text-xl mb-6 text-blue-700">Organize, search, and manage your favorite books with ease.</p>
    <p class="mt-2 text-blue-700">
      BookWise is <span class="font-semibold">open source</span>! View the code or contribute on 
      <a href="https://github.com/joesalaz/BookWise" class="underline text-blue-800 hover:text-blue-600">GitHub</a>.
    </p>
    <div class="mt-8 flex flex-col md:flex-row justify-center gap-4">
      <a href="#" id="authLink" class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow hover:bg-blue-700 transition inline-block">Get Started</a>
      <a href="/demo" class="bg-gray-200 text-blue-700 px-6 py-3 rounded-lg shadow hover:bg-gray-300 transition inline-block">View Demo</a>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-16 bg-white">
    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-10">
      <!-- Feature 1 -->
      <div class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 mb-3 text-iconColor mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75A2.25 2.25 0 014.5 4.5h15a2.25 2.25 0 012.25 2.25v13.5A2.25 2.25 0 0119.5 22.5h-15A2.25 2.25 0 012.25 20.25V6.75z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 8.25h12M6 12h12M6 15.75h12" />
        </svg>
        <h2 class="font-semibold text-lg mb-2">Manage Your Library</h2>
        <p>Add, edit, and organize your books with ease.</p>
      </div>
      <!-- Feature 2 -->
      <div class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 mb-3 text-iconColor mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V6.75A2.25 2.25 0 014.5 4.5h6a2.25 2.25 0 011.59.66l8.25 8.25a2.25 2.25 0 010 3.18l-6 6a2.25 2.25 0 01-3.18 0l-8.25-8.25A2.25 2.25 0 012.25 12.75z" />
          <circle cx="7.5" cy="7.5" r="1.5" fill="currentColor"/>
        </svg>
        <h2 class="font-semibold text-lg mb-2">Organize by Category</h2>
        <p>Arrange your books into categories for easy searching and browsing.</p>
      </div>
      <!-- Feature 3 -->
      <div class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 mb-3 text-iconColor mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 104.5 4.5a7.5 7.5 0 0012.15 12.15z" />
        </svg>
        <h2 class="font-semibold text-lg mb-2">Search Your Collection</h2>
        <p>Quickly find books in your library using powerful search tools.</p>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-16 bg-blue-50">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-8">How It Works</h2>
      <ol class="list-decimal list-inside space-y-4 text-left mx-auto max-w-md">
        <li>Add your books to your personal library.</li>
        <li>Organize books by category for quick search</li>
        <li>Browse your organized collection with ease.</li>
      </ol>
    </div>
  </section>

  <!-- Testimonials Section (Optional) -->
  <section class="py-12 bg-white">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-xl font-bold mb-6">What Our Users Say</h2>
      <div class="space-y-6">
        <blockquote class="italic text-blue-800">"BookWise makes it so easy to keep track of my reading. Love the clean design!"</blockquote>
        <blockquote class="italic text-blue-800">"I discovered so many new books thanks to BookWise's recommendations."</blockquote>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-8 bg-blue-900 text-blue-100 text-center">
    <div class="mb-2">
      <a href="#" id="aboutLink" class="mx-2 hover:underline">About</a>
      <a href="#" id="contactLink" class="mx-2 hover:underline">Contact</a>
      <a href="https://github.com/joesalaz/BookWise" class="mx-2 hover:underline">GitHub</a>
    </div>
    <div class="text-sm">
      Open source under the <a href="https://github.com/joesalaz/BookWise/blob/main/LICENSE" class="underline hover:text-blue-300">MIT License</a>.
    </div>
  </footer>
 


