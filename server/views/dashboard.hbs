{{!-- Header --}}
    {{> structure/header-dashboard}}
    <!-- Main Content -->
    <main class="flex-1 w-full mx-auto px-4 sm:px-0 lg:px-16 py-8 md:py-32 lg:py-52 ">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Library Summary Card -->
            <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
                <svg class="w-10 h-10 text-blue-700 mb-4" fill="none" stroke="currentColor" stroke-width="1.5"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M2.25 6.75A2.25 2.25 0 014.5 4.5h15a2.25 2.25 0 012.25 2.25v13.5A2.25 2.25 0 0119.5 22.5h-15A2.25 2.25 0 012.25 20.25V6.75z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 8.25h12M6 12h12M6 15.75h12" />
                </svg>
                <h2 class="text-lg font-semibold mb-2">My Library</h2>
                <p class="text-blue-900 mb-4">You have <span class="font-bold text-blue-700">42</span> books in your
                    collection.</p>
                <a href="/library" class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-800 transition">View
                    Library</a>
            </div>

            <!-- Recent Activity Card -->
            <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
                <svg class="w-10 h-10 text-blue-700 mb-4" fill="none" stroke="currentColor" stroke-width="1.5"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l4 2" />
                    <circle cx="12" cy="12" r="10" />
                </svg>
                <h2 class="text-lg font-semibold mb-2">Recent Activity</h2>
                <ul class="text-blue-900 text-sm space-y-2 mb-4">
                    <li>Added <span class="font-semibold">"Atomic Habits"</span></li>
                    <li>Finished <span class="font-semibold">"Deep Work"</span></li>
                    <li>Updated <span class="font-semibold">"Clean Code"</span></li>
                </ul>
                <a href="/activity" class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-800 transition">View
                    Activity</a>
            </div>

            <!-- Profile Card -->
            <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
                <svg class="w-10 h-10 text-blue-700 mb-4" fill="none" stroke="currentColor" stroke-width="1.5"
                    viewBox="0 0 24 24">
                    <circle cx="12" cy="8" r="4" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 20c0-4 4-7 8-7s8 3 8 7" />
                </svg>
                <h2 class="text-lg font-semibold mb-2">Profile</h2>
                <p class="text-blue-900 mb-4">Welcome, <span class="font-bold text-blue-700">Alex</span>!</p>
                <a href="/profile" class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-800 transition">Edit
                    Profile</a>
            </div>

            <!-- Add a New Book Card -->
            <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
                <svg class="w-10 h-10 text-blue-700 mb-4" fill="none" stroke="currentColor" stroke-width="1.5"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                </svg>
                <h2 class="text-lg font-semibold mb-2">Add a New Book</h2>
                <form class="w-full flex flex-col items-center">
                    <input type="text" placeholder="Title"
                        class="w-full mb-3 px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-700" />
                    <input type="text" placeholder="Author"
                        class="w-full mb-3 px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-700" />
                    <input type="text" placeholder="eBook URL"
                        class="w-full mb-3 px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-700" />
                    <input type="file" accept=".pdf,.epub" class="w-full mb-3" />
                    <button type="submit"
                        class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-800 transition w-full">Add
                        Book</button>
                </form>
            </div>
        </div>
       
    </main>

    {{!--  Footer for dashboard page --}} 
    {{> structure/footer-dashboard}}
   
