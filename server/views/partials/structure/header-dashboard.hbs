<header class="bg-gradient-to-br from-blue-100 to-blue-300 mx-auto w-full py-6 shadow text-blue-900">
    <div class="container mx-auto flex justify-between items-center px-4">
        <div class="flex items-center gap-4">
            <img src="/images/bookwise-high-resolution-logo-transparent.png" alt="BookWise Logo" class="h-16 md:h-20" style="width:auto;" />
            <h1 class="text-3xl md:text-3xl text-title-blue font-bold font-nunito mb-0">{{title}}</h1>
        </div>
        <!-- Hamburger Button (Mobile) -->
        <button id="menuBtn" class=" flex md:hidden p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-700"
            aria-label="Open Menu">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center gap-3">
            <!-- Notifications Dropdown -->
            <div class="relative">
                <button id="notificationsDropdownBtn" class="relative p-2 bg-white/60 backdrop-blur-sm rounded-full border border-white/80 text-blue-900 hover:bg-white/80 hover:shadow-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500/50">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                    </svg>
                    <!-- Notification badge -->
                    <span class="absolute -top-1 -right-1 w-4 h-4 bg-red-500 text-white text-xs rounded-full flex items-center justify-center font-medium">3</span>
                </button>
                
                <!-- Notifications Menu -->
                <div id="notificationsDropdownMenu" class="absolute right-0 top-full mt-2 w-80 bg-white/95 backdrop-blur-lg rounded-xl shadow-xl border border-white/60 overflow-hidden opacity-0 invisible transform translate-y-2 transition-all duration-200 z-50">
                    <div class="py-2">
                        <!-- Header -->
                        <div class="px-4 py-3 border-b border-blue-100/60">
                            <h3 class="font-semibold text-blue-900">Notifications</h3>
                        </div>
                        
                        <!-- Notification Items -->
                        <div class="max-h-64 overflow-y-auto">
                            <div class="px-4 py-3 border-b border-blue-50/50 hover:bg-blue-50/50 transition-colors">
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="text-sm font-medium text-blue-900">New book added to your library</p>
                                        <p class="text-xs text-blue-600 mt-1">"The Great Gatsby" has been added</p>
                                        <p class="text-xs text-blue-500 mt-1">2 hours ago</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="px-4 py-3 border-b border-blue-50/50 hover:bg-blue-50/50 transition-colors">
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="text-sm font-medium text-blue-900">Reading goal achieved!</p>
                                        <p class="text-xs text-blue-600 mt-1">You've reached your monthly target</p>
                                        <p class="text-xs text-blue-500 mt-1">1 day ago</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="px-4 py-3 hover:bg-blue-50/50 transition-colors">
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2 flex-shrink-0"></div>
                                    <div>
                                        <p class="text-sm font-medium text-blue-900">New category created</p>
                                        <p class="text-xs text-blue-600 mt-1">"Science Fiction" category is now available</p>
                                        <p class="text-xs text-blue-500 mt-1">3 days ago</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Footer -->
                        <div class="px-4 py-3 border-t border-blue-100/60">
                            <a href="/notifications" class="text-sm text-blue-600 hover:text-blue-800 font-medium">View all notifications</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Profile Dropdown -->
            <div class="relative">
                <button id="profileDropdownBtn" class="flex items-center gap-2 px-4 py-2 bg-white/60 backdrop-blur-sm rounded-full border border-white/80 font-semibold text-blue-900 hover:bg-white/80 hover:shadow-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500/50">
                <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    </svg>
                </div>
                <span class="hidden lg:block">Menu</span>
                <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            
            <!-- Dropdown Menu -->
            <div id="profileDropdownMenu" class="absolute right-0 top-full mt-2 w-56 bg-white/95 backdrop-blur-lg rounded-xl shadow-xl border border-white/60 overflow-hidden opacity-0 invisible transform translate-y-2 transition-all duration-200 z-50">
                <div class="py-2">
                    <!-- Navigation Items -->
                    <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
                            </svg>
                        </div>
                        <span class="font-medium">Dashboard</span>
                    </a>
                    
                    <a href="/library" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                            </svg>
                        </div>
                        <span class="font-medium">Library</span>
                    </a>
                    
                    <a href="/categories" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" />
                            </svg>
                        </div>
                        <span class="font-medium">Categories</span>
                    </a>
                    
                    <!-- Divider -->
                    <div class="border-t border-blue-100/60 my-2"></div>
                    
                    <a href="/profile" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            </svg>
                        </div>
                        <span class="font-medium">Profile</span>
                    </a>
                    
                    <a href="/auth/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50/80 transition-colors duration-150">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                            </svg>
                        </div>
                        <span class="font-medium">Logout</span>
                    </a>
                </div>
            </div>
            </div>
        </div>
    </div>
    <!-- Mobile Menu (Dropdown) -->
    <div id="mobileNav" class="md:hidden px-4 pb-4 opacity-0 invisible max-h-0 overflow-hidden transition-all duration-200">
        <div class="bg-white/95 backdrop-blur-lg rounded-xl shadow-xl border border-white/60 overflow-hidden mt-2">
            <div class="py-2">
                <!-- Navigation Items -->
                <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
                        </svg>
                    </div>
                    <span class="font-medium">Dashboard</span>
                </a>
                
                <a href="/library" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                        </svg>
                    </div>
                    <span class="font-medium">Library</span>
                </a>
                
                <a href="/categories" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" />
                        </svg>
                    </div>
                    <span class="font-medium">Categories</span>
                </a>
                
                <a href="/notifications" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                    <div class="w-5 h-5 flex items-center justify-center relative">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                        </svg>
                        <!-- Notification badge for mobile -->
                        <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 text-white text-xs rounded-full flex items-center justify-center font-medium text-[10px]">3</span>
                    </div>
                    <div class="flex items-center justify-between flex-1">
                        <span class="font-medium">Notifications</span>
                        <span class="text-xs bg-red-500 text-white px-2 py-1 rounded-full">3 new</span>
                    </div>
                </a>
                
                <!-- Divider -->
                <div class="border-t border-blue-100/60 my-2"></div>
                
                <a href="/profile" class="flex items-center gap-3 px-4 py-3 text-blue-900 hover:bg-blue-50/80 transition-colors duration-150">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                    </div>
                    <span class="font-medium">Profile</span>
                </a>
                
                <a href="/auth/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50/80 transition-colors duration-150">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                        </svg>
                    </div>
                    <span class="font-medium">Logout</span>
                </a>
            </div>
        </div>
    </div>
</header>
