{{!-- Header --}}
{{> structure/header-dashboard}}

<!-- Profile Layout -->
<main class="flex-1 w-full max-w-6xl mx-auto px-4 py-10 flex flex-col md:flex-row gap-8">
    <!-- Sidebar: Avatar, Stats, Profile Info, Edit -->
    <aside class="w-full md:w-2/5 lg:w-1/3 bg-white rounded-lg shadow-lg p-8 flex flex-col items-center md:items-start">
        <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="User Avatar"
            class="w-28 h-28 rounded-full border-4 border-blue-200 shadow mb-6">
        
        <!-- Stats -->
        <div class="flex flex-col gap-4 w-full mb-6">
            <div class="flex items-center gap-4">
                <div class="text-2xl font-bold text-blue-700">42</div>
                <div class="text-gray-500 text-sm">Books</div>
            </div>
            <div class="flex items-center gap-4">
                <div class="text-2xl font-bold text-blue-700">Fiction</div>
                <div class="text-gray-500 text-sm">Favorite Category</div>
            </div>
            <div class="flex items-center gap-4">
                <div class="text-2xl font-bold text-blue-700">7</div>
                <div class="text-gray-500 text-sm">Reviews</div>
            </div>
        </div>
        
        <!-- Profile Details Section -->
        <div id="profileView" class="w-full mb-6">
            <h3 class="text-lg font-semibold text-blue-900 mb-2">Profile Details</h3>
            <ul class="space-y-2">
                <li><span class="font-semibold text-gray-700">Full Name:</span> Alex Johnson</li>
                <li><span class="font-semibold text-gray-700">Email:</span> alex.johnson@email.com</li>
                <li>
                    <span class="font-semibold text-gray-700">Bio:</span>
                    <span class="block bg-blue-50 rounded p-2 mt-1 text-gray-700">Avid reader and book collector.</span>
                </li>
            </ul>
            <!-- Edit Profile Button -->
            <button id="editProfileBtn"
                class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800 transition font-semibold w-full mt-4">
                Edit Profile
            </button>
        </div>
        
        <!-- Edit Profile Form (hidden by default) -->
        <form id="editProfileForm" class="space-y-4 w-full hidden">
            <h3 class="text-lg font-semibold text-blue-900 mb-2">Edit Profile</h3>
            <div>
                <label class="block text-gray-700 font-semibold mb-1" for="name">Name</label>
                <input id="name" name="name" type="text" value="Alex Johnson"
                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-700">
            </div>
            <div>
                <label class="block text-gray-700 font-semibold mb-1" for="email">Email</label>
                <input id="email" name="email" type="email" value="alex.johnson@email.com"
                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-700">
            </div>
            <div>
                <label class="block text-gray-700 font-semibold mb-1" for="bio">Bio</label>
                <textarea id="bio" name="bio" rows="3"
                    class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-700">Avid reader and book collector.</textarea>
            </div>
            <div class="flex gap-4">
                <button type="submit"
                    class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800 transition font-semibold">
                    Save Changes
                </button>
                <button type="button" id="cancelEditBtn"
                    class="bg-gray-200 text-gray-700 px-6 py-2 rounded hover:bg-gray-300 transition font-semibold">
                    Cancel
                </button>
            </div>
        </form>
        
        <!-- Sidebar Actions -->
        <div class="flex flex-col gap-2 w-full mt-6">
            <a href="/dashboard"
                class="w-full text-center bg-blue-100 text-blue-900 py-2 rounded hover:bg-blue-200 font-semibold transition">‚Üê Dashboard</a>
            <button
                class="w-full text-center bg-red-100 text-red-700 py-2 rounded hover:bg-red-200 font-semibold transition mt-2">Delete Account</button>
        </div>
    </aside>

    <!-- Main Section: Reviews, Categories, Books -->
    <section class="flex-1 bg-white rounded-lg shadow-lg p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Your Reviews -->
            <div>
                <h3 class="text-lg font-semibold text-blue-900 mb-4">Your Reviews</h3>
                <div class="space-y-4">
                    <div class="bg-blue-50 rounded p-4 shadow">
                        <div class="flex justify-between items-center mb-2">
                            <span class="font-semibold text-blue-900">The Great Gatsby</span>
                            <span class="text-sm text-gray-500">March 2024</span>
                        </div>
                        <p class="text-gray-700">A timeless classic! The writing is beautiful and the story is captivating.</p>
                    </div>
                    <div class="text-gray-400 italic">You have 1 review. More coming soon!</div>
                </div>
            </div>
            <!-- Your Categories (Clickable) -->
            <div>
                <h3 class="text-lg font-semibold text-blue-900 mb-4">Your Categories</h3>
                <ul class="space-y-2">
                    <li class="bg-blue-50 rounded p-3 flex justify-between items-center shadow">
                        <a href="/library?category=Fiction"
                            class="font-semibold text-blue-800 hover:underline hover:text-blue-900 transition">
                            Fiction
                        </a>
                        <span class="text-sm text-gray-500">18 books</span>
                    </li>
                    <li class="bg-blue-50 rounded p-3 flex justify-between items-center shadow">
                        <a href="/library?category=Science"
                            class="font-semibold text-blue-800 hover:underline hover:text-blue-900 transition">
                            Science
                        </a>
                        <span class="text-sm text-gray-500">10 books</span>
                    </li>
                    <li class="bg-blue-50 rounded p-3 flex justify-between items-center shadow">
                        <a href="/library?category=History"
                            class="font-semibold text-blue-800 hover:underline hover:text-blue-900 transition">
                            History
                        </a>
                        <span class="text-sm text-gray-500">7 books</span>
                    </li>
                </ul>
            </div>
            <!-- Your Books (Clickable, full width) -->
            <div class="md:col-span-2 mt-8">
                <h3 class="text-lg font-semibold text-blue-900 mb-4">Your Books</h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <a href="/books/atomic-habits"
                        class="bg-blue-50 rounded p-4 shadow block hover:bg-blue-100 transition">
                        <div class="font-semibold text-blue-900 mb-1">Atomic Habits</div>
                        <div class="text-sm text-gray-500 mb-1">by James Clear</div>
                        <div class="text-xs text-gray-400">Category: Self-Help</div>
                    </a>
                    <a href="/books/the-great-gatsby"
                        class="bg-blue-50 rounded p-4 shadow block hover:bg-blue-100 transition">
                        <div class="font-semibold text-blue-900 mb-1">The Great Gatsby</div>
                        <div class="text-sm text-gray-500 mb-1">by F. Scott Fitzgerald</div>
                        <div class="text-xs text-gray-400">Category: Fiction</div>
                    </a>
                    <a href="/books/sapiens"
                        class="bg-blue-50 rounded p-4 shadow block hover:bg-blue-100 transition">
                        <div class="font-semibold text-blue-900 mb-1">Sapiens</div>
                        <div class="text-sm text-gray-500 mb-1">by Yuval Noah Harari</div>
                        <div class="text-xs text-gray-400">Category: History</div>
                    </a>
                    <!-- Add more books as needed -->
                </div>
            </div>
        </div>
    </section>
</main>

